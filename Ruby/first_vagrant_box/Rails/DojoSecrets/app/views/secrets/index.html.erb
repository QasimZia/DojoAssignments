<h1>Secrets, <a href='/users/<%= current_user.id %>'>Home</a></h1>
<% @secrets.each do |secret| %>
    <hr>
    <p>
    <%= secret.content %>
    <% if secret.user_id == current_user.id %>
        <a href='/secrets/<%= secret.id %>/destroy'>Delete</a>
    <% end %>
    </p>
    <p>
    <%= secret.likes.count %> likes
    <% unless secret.users.include?(current_user) %> 
        <a href='/secrets/like/<%= secret.id %>'>Like</a>
    <% else %>
        <span style='font-weight:bold;'>You have liked this</span>
    <% end %>
    </p>
    <hr>
<% end %>
